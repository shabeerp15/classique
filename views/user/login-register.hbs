<div class="section">

    <!-- Breadcrumb Area Start -->
    <div class="breadcrumb-area bg-light">
        <div class="container-fluid">
            <div class="breadcrumb-content text-center">
                <h1 class="title">Login | Register</h1>
                <ul>
                    <li>
                        <a href="index.html">Home </a>
                    </li>
                    <li class="active"> Login | Register</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Area End -->

</div>
<!-- Breadcrumb Section End -->

<!-- Login | Register Section Start -->
<div class="section section-margin">

    <div class="container">

        <div class="row mb-n10">
            <div class="col-lg-6 col-md-8 m-auto m-lg-0 pb-10">
                <!-- Login Wrapper Start -->
                <div class="login-wrapper">

                    <!-- Login Title & Content Start -->
                    <div class="section-content text-center mb-5">
                        <h2 class="title mb-2">Login</h2>
                        <p class="desc-content">Please login using account detail bellow.</p>
                    </div>
                    <!-- Login Title & Content End -->

                    <!-- Form Action Start -->
                    <form action="/login" method="post">

                        <!-- Input Email Start -->
                        <div class="single-input-item mb-3">
                            <input type="email" name="loginEmail" placeholder="Email or Username"
                                onkeyup="isLoginEmail()" id="loginEmail">
                            <span class="text-danger" id="loginEmailError"></span>
                        </div>
                        <!-- Input Email End -->

                        <!-- Input Password Start -->
                        <div class="single-input-item mb-3">
                            <input onkeyup="isLoginPassword()" id="loginPassword" type="password" name="loginPassword"
                                placeholder="Enter your Password">
                            <p id="loginPasswordError" class="text-danger"></p>
                        </div>
                        <!-- Input Password End -->

                        <!-- Checkbox/Forget Password Start -->
                        <div class="single-input-item mb-3">
                            <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                <div class="remember-meta mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="rememberMe">
                                        <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                    </div>
                                </div>
                                <a href="#" class="forget-pwd mb-3">Forget Password?</a>
                            </div>
                        </div>
                        <!-- Checkbox/Forget Password End -->
                        <span class="text-danger">{{userBlock}}</span>
                        <!-- Login Button Start -->
                        <div class="single-input-item mb-3">
                            <button class="btn btn btn-dark btn-hover-primary rounded-0">Login</button>
                        </div>
                        <!-- Login Button End -->

                        <!-- Lost Password & Creat New Account Start -->
                        <div class="lost-password">
                            <a href="/login">Create Account</a>
                        </div>
                        <!-- Lost Password & Creat New Account End -->

                    </form>
                    <!-- Form Action End -->

                </div>
                <!-- Login Wrapper End -->
            </div>
            <div class="col-lg-6 col-md-8 m-auto m-lg-0 pb-10">
                <!-- Register Wrapper Start -->
                <div class="register-wrapper">

                    <!-- Login Title & Content Start -->
                    <div class="section-content text-center mb-5">
                        <h2 class="title mb-2">Create Account</h2>
                        <p class="desc-content">Please Register using account detail bellow.</p>
                    </div>
                    <!-- Login Title & Content End -->


                    <!-- Form Action Start -->
                    <form action="/register" method="post" onsubmit="registerCheck()">

                        <!-- Input First Name Start -->
                        <div class="single-input-item mb-3">
                            <input onkeyup="firstNameCheck()" type="text" name="firstName" id="firstName"
                                placeholder="First Name" data-rule-required="true">
                            <span class="text-danger" id="firstNameError"></span>
                        </div>
                        <!-- Input First Name End -->

                        <!-- Input Last Name Start -->
                        <div class="single-input-item mb-3">
                            <input onkeyup="lastNameCheck()" id="lastName" type="text" name="lastName"
                                placeholder="Last Name">
                            <p class="text-danger" id="lastNameError"></p>
                        </div>
                        <!-- Input Last Name End -->

                        <!-- Input Email Or Username Start -->
                        <div class="single-input-item mb-3">
                            <input onkeyup="isRegisterEmail()" id="registerEmail" type="email" name="email"
                                placeholder="Email or Username">
                            <p class="text-danger" id="registerEmailError"></p>
                        </div>
                        <!-- Input Email Or Username End -->

                        <!-- Input Password Start -->
                        <div class="single-input-item mb-3">
                            <input onkeyup="registerPasswordCheck()" id="registerPassword" type="password"
                                name="password" placeholder="Enter your Password">
                            <p id="registerPasswordError" class="text-danger"></p>
                        </div>
                        <!-- Input Password End -->


                        <!-- Checkbox & Subscribe Label Start -->
                        <div class="single-input-item mb-3">
                            <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                <div class="remember-meta mb-3">
                                    <div class="custom-control custom-checkbox">
                                        {{!-- <input type="checkbox" class="custom-control-input" id="rememberMe-2">
                                        --}}
                                        <label class="custom-control-label" for="rememberMe-2">Subscribe Our
                                            Newsletter</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Checkbox & Subscribe Label End -->

                        <!-- Register Button Start -->
                        <div class="single-input-item mb-3">
                            <button class="btn btn btn-dark btn-hover-primary rounded-0">Register</button>
                        </div>
                        <!-- Register Button End -->

                    </form>
                    <!-- Form Action End -->

                </div>
                <!-- Register Wrapper End -->
            </div>
        </div>

    </div>
</div>
<!-- Login | Register Section End -->

<script>
    function isLoginEmail() {
        let loginEmail = document.getElementById("loginEmail").value
        let loginEmailError = document.getElementById("loginEmailError")
        let pattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (loginEmail == "" || loginEmail == null) {
            loginEmailError.innerHTML = "required"
            return false
        }
        else if (loginEmail.match(pattern)) {
            loginEmailError.innerHTML = ''
            return true
        } else {
            loginEmailError.innerHTML = "Invalid Email Address"
            return false
        }
    }

    function isLoginPassword() {
        const loginPassword = document.getElementById('loginPassword').value
        const loginPasswordError = document.getElementById('loginPasswordError')
        if (loginPassword == '') {
            loginPasswordError.innerHTML = 'Required'
            return false
        } else {
            loginPasswordError.innerHTML = ''
            return true
        }
    }

    function firstNameCheck() {
        const firstName = document.getElementById('firstName').value
        const firstNameError = document.getElementById('firstNameError')
        if (firstName == '') {
            firstNameError.innerHTML = 'Required'
            return false
        }
        else if (firstName.length < 4) {
            firstNameError.innerHTML = 'Minimum 4 letters'
            return false
        }
        else {
            firstNameError.innerHTML = ''
            return true
        }
    }

    function lastNameCheck() {
        const lastName = document.getElementById('lastName').value
        const lastNameError = document.getElementById('lastNameError')
        if (lastName == '') {
            lastNameError.innerHTML = 'Required'
            return false
        }
        else if (lastName.length < 4) {
            lastNameError.innerHTML = 'Minimum 4 letters'
            return false
        }
        else {
            lastNameError.innerHTML = ''
            return true
        }
    }

    function isRegisterEmail() {
        let registerEmail = document.getElementById("registerEmail").value
        let registerEmailError = document.getElementById("registerEmailError")
        let pattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        if (registerEmail == "" || registerEmail == null) {
            registerEmailError.innerHTML = "required"
            return false
        }
        else if (registerEmail.match(pattern)) {
            registerEmailError.innerHTML = ''
            return true
        } else {
            registerEmailError.innerHTML = "Invalid Email Address"
            return false
        }
    }

    function registerPasswordCheck() {
        const registerPassword = document.getElementById('registerPassword').value
        const registerPasswordError = document.getElementById('registerPasswordError')
        if (registerPassword == '') {
            registerPasswordError.innerHTML = 'Required'
            return false
        } else {
            registerPasswordError.innerHTML = ''
            return true
        }
    }

    function registerCheck() {
        if (isRegisterEmail() && registerPasswordCheck() && lastNameCheck() && firstNameCheck() ) {
            return true
        } else {
            firstNameCheck()
            lastNameCheck()
            registerPasswordCheck()
            isRegisterEmail()
            event.preventDefault();
            return false
        }
    }

</script>