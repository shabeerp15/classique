

<main class="main-wrap">
    <header class="main-header navbar">
		
		<div class="col-nav">
			<ul class="nav">
				
				<li class="nav-item">
					<a class="nav-link btn-icon" href="/admin/logout">Logout</i> </a>
				</li>
			</ul>
		</div>
	</header>

        <section class="content-main" style="max-width: 720px">
	
	<div class="content-header">
		<h2 class="content-title">Add Banner </h2>
		
	</div>

	<div class="card mb-4">
          <div class="card-body">
			<form action="/admin/add-banner" enctype="multipart/form-data" method="POST">
				<div class="mb-4">
					<label for="product_name" class="form-label">Banner title</label>
					<input type="text" name="firstTitle" placeholder="Type here" class="form-control" id="product_name" required>
				</div>

				<div class="mb-4">
					<label for="product_name" class="form-label">Second title</label>
					<input type="text" name="secondTitle" placeholder="Type here" class="form-control" id="product_name" required>
				</div>

				<div class="mb-4">
					<label for="product_name" class="form-label">Short Description</label>
					<input type="text" name="description" placeholder="Type here" class="form-control" id="product_name" required>
				</div>

				<div class="mb-4">
					<label class="form-label">Image</label>
					<input class="form-control" name="image" type="file" required >
				</div>
				
				<button class="btn btn-primary">Submit item</button>

			</form>
          </div>
    </div> <!-- card end// -->

    


</section> <!-- content-main end// -->

<div class="p-5">
    <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Banner Name</th>
                        <th scope="col">Banner Image</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each banner}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.firstTitle}}</td>
                        <td><img src="/banner/{{this._id}}.jpg" style="width: 50px; height: 35px;"/></td>
                        <td><a href="/admin/delete-banner/{{this._id}}"><i class="far fa-trash-alt" style="color: red;"></i></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
</div>

</main>
